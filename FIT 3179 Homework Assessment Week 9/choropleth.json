{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Deaths by State in Malaysia, 2022",
    "width": 800,
    "height": 500,
    "data": {
      "url": "ne_110m.json" ,
      "format": {"type": "topojson",
        "feature": "ne_110m_admin_0_countries"  
      }
    },
    "transform": [
      {
        "lookup": "properties.name",  // Matches the state name in GeoJSON
        "from": {
          "data": {
            "url" : "malaysia-covid19.csv"

            ]
          },
          "key": "State",
          "fields": ["Deaths"]
        }
      }
    ],
    "projection": {"type": "mercator"},  // Appropriate projection for Malaysia
    "mark": "geoshape",
    "encoding": {
      "color": {
        "field": "Deaths",
        "type": "quantitative"
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State"},
        {"field": "Deaths", "type": "quantitative"}
      ]
    }
  }
  